<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('../../partials/head') %>
</head>

<body>
    <%- include('../../partials/header_admin') %>

    <!-- Start Page Breadcrumb -->
    <section class="w3s-breadcrumb bg-gray">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <h3 class="font-28 font-roboto fw-bold mb-0">Utilisateurs</h3>
            </div>
            <div class="col-md-6">
              <nav class="float-md-end mt-lg-0 mt-2" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a class="text-decoration-none link-hover dark-text font-14 font-poppins" href="/">Accueil</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Utilisateurs</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </section>
      <!-- End Page Breadcrumb -->
    
      <!-- Start Contact Form -->
      <section class="w3s-contact-section my-5 py-5">
        <div class="container">
          <div class="row g-5">
            <div class="col-md-6">
              <div class="contact-form">
                <h4 class="font-20 font-roboto dark-text text-capitalize mb-4">Ajouter un administarteur</h4>
                <!-- Contact Form -->
                <form action="/admin/utilisateurs/" method="POST">
                  <label for="name" class="mb-2">Nom</label>
                  <input type="text" name="name" id="name" class="form-control form-control-lg font-16" />
                  <label for="email" class="mt-4 mb-2">Email</label>
                  <input type="email" name="email" id="email" class="form-control form-control-lg font-16" />
                  <label for="password" class="mt-4 mb-2">Mot de passe</label>
                  <input type="password" name="password" id="password" class="form-control form-control-lg font-16" />
                  <label for="phone" class="mt-4 mb-2">Telephone</label>
                  <input type="text" name="phone" id="phone" class="form-control form-control-lg font-16" />
                  <button type="submit" class="w3s-primary-btn mt-4 border-0">Enregistrer</button>
                </form>
              </div>
            </div>
            <!-- Google Map -->
            <div class="col-md-6">
              <h4 class="font-20 font-roboto dark-text text-capitalize mb-4">Liste des administarteurs</h4>
              <div class="row g-4">
                <% users.forEach(user => { %>
                  <div class="col-12">
                    <div class="w3s-address-info-box cursor-pointer card shadow rounded-3 border-0 py-4 px-3">
                      <h3 class="font-20 fw-600 font-poppins dark-text text-capitalize text-center mb-3"><%= user.name %></h3>
                      <div class="d-flex justify-content-between">
                        <span>Email </span>
                        <span class="text-dark"><%= user.email %></span>
                      </div>
                      <div class="d-flex justify-content-between">
                        <span>Telephone </span>
                        <span class="text-dark"><%= user.phone %></span>
                      </div>
                      <div class="mt-4">
                        <a href="#"><span class="me-4 text-primary">Editer </span></a>
                        <a href="#"><span class="text-danger">Supprimer</span></a>
                        
                      </div>
                    </div>
                  </div>
                <% }); %> 
              </div>
            </div>
          </div>
        </div>
  
      </section>
      <!-- End Contact Form -->

    <%- include('../../partials/scripts') %>
</body>

</html>