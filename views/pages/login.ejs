<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/header') %>

    <!-- Start Page Breadcrumb -->
    <section class="w3s-breadcrumb bg-gray">
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <h3 class="font-28 font-roboto fw-bold mb-0">Se connecter</h3>
            </div>
            <div class="col-md-6">
              <nav class="float-md-end mt-lg-0 mt-2" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a class="text-decoration-none link-hover dark-text font-14 font-poppins" href="/">Accueil</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Se connecter</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </section>
      <!-- End Page Breadcrumb -->
    
      <!-- Start Contact Form -->
      <section class="w3s-contact-section my-5">
        <div class="container">
          <div class="row">
            <div class="col-12 col-lg-6 offset-lg-3">
              <div class="contact-form">
                <h3 class="font-32 dark-text text-center">Se connecter</h3>
                <form action="/connexion" method="POST">
                  <label for="email" class="mb-2">Adresse email</label>
                  <input type="text" name="email" id="email" class="form-control form-control-lg font-16" />
                  <label for="password" class="mt-4 mb-2">Mot de passe</label>
                  <input type="password" name="password" id="password" class="form-control form-control-lg font-16" />
                  <button type="submit" class="w3s-primary-btn mt-4 border-0">Se connecter</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- End Contact Form -->
  
    <%- include('../partials/footer') %>

    <%- include('../partials/scripts') %>
</body>

</html>